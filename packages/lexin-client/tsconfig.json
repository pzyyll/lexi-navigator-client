{
  "compilerOptions": {
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "target": "ESNext",
    "module": "CommonJS",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": ".vite",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@src/*": ["src/*"],
      "@themes/*": ["src/renderer/themes/*"],
      "@system/*": ["src/system/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".vite"],
}
